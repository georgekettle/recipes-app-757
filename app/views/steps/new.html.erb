
<div class="max-w-xl p-10 mx-auto">
    <h1>Add a step</h1>
    <%= simple_form_for([@recipe, @step]) do |f| %>
        <%= f.input :photo %>
        <%= f.input :description %>
        <%= f.input :ingredients %>
        <%= f.submit 'Add step', class: "mx-auto mt-16 text-white bg-purple-500 border-0 py-2 px-8 focus:outline-none hover:bg-purple-600 rounded text-lg w-full text-center" %>
    <% end %>
</div>

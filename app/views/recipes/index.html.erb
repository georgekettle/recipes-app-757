<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 pb-0 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h2 class="text-xs text-purple-500 tracking-widest font-medium title-font mb-1">Recipe party</h2>
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">All recipes</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Find recipes that you'll love. We have everything you could ever dream of, including our specialty: RAW CHICKEN!</p>
    </div>
  </div>
</section>

<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap -m-4">
        <% @recipes.each do |recipe| %>
            <div class="p-4 md:w-1/3 no-underline">
                <%= link_to recipe_path(recipe), class:'block h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden no-underline' do %>
                    <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="<%= recipe.photo %>" alt="blog">
                    <div class="p-6">
                        <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1 text-upcase"><%= recipe.difficulty %></h2>
                        <h1 class="title-font text-lg font-medium text-gray-900 mb-3"><%= recipe.name %></h1>
                        <p class="leading-relaxed mb-3">Photo booth fam kinfolk cold-pressed sriracha leggings jianbing microdosing tousled waistcoat.</p>
                        <div class="flex items-center flex-wrap ">
                        <div class="text-purple-500 inline-flex items-center md:mb-2 lg:mb-0">Learn More
                            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 12h14"></path>
                            <path d="M12 5l7 7-7 7"></path>
                            </svg>
                        </div>
                        <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-gray-200">
                            <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z" />
                            </svg>
                            <%= recipe.rating %>
                        </span>
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
  </div>
</section>




